{
  "expo": {
    "name": "Exceptional ALIEN",
    "slug": "exceptional-alien-app",
    "version": "2.0.0",
    "icon": "./assets/icon.png",
    "scheme": "ea-app-scheme",
    "orientation": "portrait",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2220C1"
    },
    "assetBundlePatterns": ["**/*"],
    "android": {
      "userInterfaceStyle": "automatic",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Exceptional ALIEN to use your location."
        }
      ]
    ]
  }
}
